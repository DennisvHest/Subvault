@model IEnumerable<Subvault_Domain.Entities.Episode>

<div id="seasons-list" class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
    <h4>Episodes</h4>
    <table>
        <thead>
            <tr>
                <td>#</td>
                <td>Name</td>
                <td>Air date</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (Subvault_Domain.Entities.Episode episode in Model) {
                <tr>
                    <td>@episode.EpisodeNumber</td>
                    <td>@episode.Name</td>
                    @if (episode.AirDate != null) {
                        <td>@episode.AirDate.Value.ToString("MM-dd-yyyy")</td>
                    } else {
                        <td>No air date</td>
                    }
                    <td><a href="/Series/@(episode.Season.Series.Id)/Season/@(episode.Season.SeasonNumber)/Episode/@(episode.EpisodeNumber)"><button class="green-button"><i class="fa fa-chevron-right" aria-hidden="true"></i></button></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>